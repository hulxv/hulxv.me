---
import { projectData } from "./data";
import BaseLayout from "@/layouts/BaseLayout.astro";
import ListProjects from "@/components/ListProjects.vue";
---

<BaseLayout title="Projects" description="List of projects that I am proud of">
	<h1 class="text-title mb-10">Projects</h1>
	<div mb-16 sm:mb-24>
		{
			projectData.length > 0 && (
				<div>
					{projectData.map((i) => (
						<div mb-10>
							<h2 class="h20 pointer-events-none relative select-none">
								<span class="text-3.2em color-transparent text-stroke-1.5 text-stroke-hex-aaa op35 dark:op20 absolute top-0 font-bold">
									{i.title}
								</span>
							</h2>
							<ListProjects list={i.projects} />
						</div>
					))}
				</div>
			)
		}
	</div>
</BaseLayout>
